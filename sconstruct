def glob(dirs):
	files = []
	for dir in dirs:
		files.append(Glob(dir + "/*.cxx"))
	return files

flags = [
	"-std=c++2a",
	"-O3",
	
	"-W",
	"-Wall",
	"-Wextra",
	"-pedantic",
	"-Wpedantic",
	"-pedantic-errors",
	"-Wunused",
	"-Wwrite-strings",
	# "-Wzero-length-array",
	"-Wconversion",
	"-Wunreachable-code",
	"-Wuninitialized",
	"-Wold-style-cast",
	"-Walloca",
	"-Wparentheses",
	# "-Wunreachable-code-aggressive",
	"-Wno-unknown-pragmas"
]


env = Environment(
	CXX = "clang++-12",
	# CXX = "g++-10",
	CXXFLAGS = flags,
	CPPPATH = [
		"libs/stdxx/",
		"libs/cphinx/",
	],
	CPPDEFINES = [],
	LIBS = [],
	LIBPATH = ".",
	SCONS_CXX_STANDART="c++20",
	CXXCOMSTR = "[Compiling] $TARGET",
	LINKCOMSTR = "[Linking] $TARGET")

env.Program('bin/test', glob(["test", "test/test"]))




